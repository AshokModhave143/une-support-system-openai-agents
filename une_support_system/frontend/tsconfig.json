{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2016", // Set the JavaScript language version for emitted JavaScript.
    "module": "ESNext", // Use ESNext module system for modern JavaScript.
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Include libraries for DOM and modern JavaScript features.
    "jsx": "react-jsx", // Use React's JSX runtime.
    "moduleResolution": "node", // Resolve modules using Node.js-style resolution.
    "resolveJsonModule": true, // Enable importing JSON files.
    "allowSyntheticDefaultImports": true, // Allow default imports from modules without default exports.
    "esModuleInterop": true, // Emit additional JavaScript for CommonJS compatibility.
    "skipLibCheck": true, // Skip type checking for declaration files.
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports.

    /* Strict Type-Checking Options */
    "strict": true, // Enable all strict type-checking options.
    "noImplicitAny": true, // Raise errors for variables with an implied `any` type.
    "strictNullChecks": true, // Ensure `null` and `undefined` are handled explicitly.
    "strictFunctionTypes": true, // Check function parameter and return type compatibility.
    "strictBindCallApply": true, // Check arguments for `bind`, `call`, and `apply`.
    "strictPropertyInitialization": true, // Ensure class properties are initialized in the constructor.
    "noImplicitThis": true, // Raise errors for `this` with an implied `any` type.
    "useUnknownInCatchVariables": true, // Default catch variables to `unknown` instead of `any`.

    /* Module Resolution Options */
    "baseUrl": "./", // Set the base directory for module resolution.
    "typeRoots": ["./node_modules/@types", "global.tsx"], // Specify type declaration folders.

    /* Emit Options */
    "outDir": "./dist", // Specify the output directory for compiled files.
    "removeComments": true, // Remove comments in the emitted JavaScript.
    "sourceMap": true, // Generate source maps for debugging.

    /* Experimental Options */
    "experimentalDecorators": true, // Enable experimental support for decorators.
    "emitDecoratorMetadata": true // Emit metadata for decorators.
  },
  "include": [
    "src/**/*", // Include all files in the `src` directory.
    "global.d.ts"
  ],
  "exclude": [
    "node_modules", // Exclude `node_modules` from compilation.
    "dist", // Exclude the output directory.
    "**/*.test.ts", // Exclude test files.
    "**/*.test.tsx" // Exclude test files.
  ]
}
